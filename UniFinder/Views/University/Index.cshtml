@model IEnumerable<UniFinder.UniversityTbl>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (TempData["deleteuniname"] != null)
{
    <script language="javascript">
        alert('@TempData["deleteuniname"]');
        TempData["deleteuniname"] = null;
    </script>
}

<h2>University Master List</h2>

<p>
    @Html.ActionLink("Create New", "Create",null, new { @class = "btn btn-success" } )
</p>
<table class="table">
    <tr>
        <th>
            University Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UniName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>                
                <img src="@Url.Content(item.Picture)" alt="" width="60" height="60" multiple />
            </td>
            <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.UniID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.UniID }) |*@

                    @Html.ActionLink("Delete", "Delete", new { id = item.UniID },
        new { onclick = "return confirm('Are you sure you wants to delete?');" })
                </td>
        </tr>
    }

</table>
